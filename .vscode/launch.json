{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--host", "127.0.0.1", "--port", "8000"],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/server"
    },
    {
      "name": "Next.js: Web",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Chạy cả Server & Web",
      "configurations": ["Python: FastAPI Server", "Next.js: Web"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Tất cả",
        "order": 1
      }
    }
  ]
}
