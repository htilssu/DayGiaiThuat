{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--lifespan",
        "on"
      ],
      "cwd": "${workspaceFolder}/server"
    },
    {
      "name": "Next.js: Web",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "Docker-compose: Toàn bộ ứng dụng",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker-compose up -d",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Docker-compose: Rebuild và chạy",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker-compose up --build",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Chạy cả Server & Web",
      "configurations": [
        "Python: FastAPI Server",
        "Next.js: Web",
        "Docker-compose: Toàn bộ ứng dụng"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Tất cả",
        "order": 1
      }
    },
    {
      "name": "Docker-compose & Debug",
      "configurations": ["Docker-compose: Toàn bộ ứng dụng"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Docker",
        "order": 2
      }
    }
  ]
}
