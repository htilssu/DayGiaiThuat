# Thông tin ứng dụng
PROJECT_NAME="AI Giải Thuật"
DEV_MODE=true

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=giaithuat

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

GOOGLE_API_KEY=your_google_api_key_here
AGENT_LLM_MODEL=gemini-2.5-flash-preview-05-20
CREATIVE_LLM_MODEL=gemini-2.5-flash-preview-05-20
EMBEDDING_MODEL=models/text-embedding-004
PINECONE_API_KEY=your_pinecone_api_key_here
MONGO_URI=your_mongo_uri_here
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=default

# File Upload Settings
UPLOAD_DIR=uploads

# AWS/S3 Boto3 Settings (fix for MissingContentLength error with MinIO/R2)
AWS_REQUEST_CHECKSUM_CALCULATION=when_required
AWS_RESPONSE_CHECKSUM_VALIDATION=when_required

# Cloudflare R2 Settings (S3-compatible)
# Lấy từ R2 Dashboard > Manage R2 API tokens
S3_ACCESS_KEY_ID=your_r2_access_key_id
S3_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Region cho R2 thường là "auto"
S3_REGION=auto

# Tên bucket R2 bạn đã tạo
S3_BUCKET_NAME=your_r2_bucket_name

# Endpoint URL cho R2: https://[account-id].r2.cloudflarestorage.com
# Account ID lấy từ Cloudflare Dashboard (sidebar phải)
S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# URL public để truy cập files (tuỳ chọn)
# Có thể là custom domain hoặc để trống để dùng R2 public URL
# Ví dụ: https://cdn.your-domain.com hoặc để trống
S3_PUBLIC_URL=

# Prefixes cho các loại file
S3_COURSE_IMAGE_PREFIX=course-images/
S3_USER_AVATAR_PREFIX=user-avatars/